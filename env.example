# SubscriptionMaster Environment Variables
# 이 파일을 복사하여 .env 파일을 생성하고 실제 값으로 수정하세요

# 애플리케이션 설정
NODE_ENV=development
PORT=3001
FRONTEND_PORT=3000

# 데이터베이스 설정
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/subscriptionmaster
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=subscriptionmaster
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Redis 설정
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# S3/MinIO 설정
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=subscriptionmaster-receipts
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# JWT 설정
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# OAuth 설정
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# 이메일 설정
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@subscriptionmaster.com

# SMS 설정 (선택사항)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# 로깅 설정
LOG_LEVEL=info
LOG_FORMAT=json

# 보안 설정
# 다중 오리진 허용 시 쉼표로 구분(CORS_ORIGINS가 우선)
# 예: http://localhost:3000,https://*.vercel.app
CORS_ORIGINS=http://localhost:3000
# 하위 호환 (설정 없으면 위 CORS_ORIGINS 사용)
# CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 기능 플래그
FEATURE_BUSINESS=false
FEATURE_PRICE_INTEL=false
FEATURE_VIRTUAL_CARD=false
FEATURE_EXT_USAGE=false

# 알림 설정
ALERT_EMAIL_ENABLED=true
ALERT_SMS_ENABLED=false
ALERT_PUSH_ENABLED=false

# 성능 설정
CACHE_TTL=3600
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000
